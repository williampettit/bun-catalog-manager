{
  "$schema": "node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "perf": "warn",
    "suspicious": "warn",
    "pedantic": "warn"
  },
  "rules": {
    "unicorn/no-array-callback-reference": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.ts"],
      "rules": {
        "max-lines-per-function": "off"
      }
    }
  ]
}
